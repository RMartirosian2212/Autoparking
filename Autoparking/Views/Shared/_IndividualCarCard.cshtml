@model Autoparking_Models.Car
@using Autoparking_Utility
<div class="col-lg-4 col-md-6 pb-4 filter @Model.Type.Replace(' ', '_')"
    <!-- Card-->
    <div class="card bg-white rounded shadow-sm" style="border:1px solid #222">
        <div class="card-body px-3 pt-3 pb-1 row">
            <div class="col-6"><label class="float-start">@Model.Name</label></div>
            <div class="col-6"><label class="float-end text-info h5">@Model.Price Kč per day</label></div>
        </div>
        <img class="card-img-top img-fluid d-block mx-auto mb-3" src="@WebConstant.ImagePath@Model.Image" alt="Card image">
        <div class="card-body p-1 px-3 row">
            <div class="col-12">
                <span class="badge p-2 border w-100 text-black" style="background-color:lavenderblush">@Model.Type</span>
            </div>
            <div class="col-12 p-1">
                <a asp-action="Details" asp-route-id="@Model.id" class="btn btn-dark form-control btn-sm p-2" style="height:40px">View Details</a>
            </div>
        </div>
    </div>
</div>
