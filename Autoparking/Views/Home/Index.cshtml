@model IEnumerable<Car>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Cars collection</h2>
        </div>
    </div>
    <div class="text-center">
        <button class="btn btn-dark filter-button" data-filter="all">All</button>
        @foreach (var item in Model)
        {
            <button class="btn btn-outline-secondary filter-button" data-filter="@item.Type.Replace(' ', '_')">@item.Type</button>
        }
    </div>
    <br />
    <div class="row">
        @if (Model.Count() > 0)
        {
            @foreach (var item in Model)
            {
                <partial name="_IndividualCarCard" model="item"></partial>
            }
        }
        else
        {
            <p>There is no car.</p>
        }
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {

            $(".filter-button").click(function () {

                var value = $(this).attr('data-filter');
                if (value == "all") {
                    $('.filter').show('1000');
                }
                else {
                    $(".filter").not('.' + value).hide('3000');
                    $('.filter').filter('.' + value).show('3000');

                }
            });

        });
    </script>
}